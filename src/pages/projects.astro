---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Jack WebDev | Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5 text-[#12395d]">Projects Header</div>
  </div>

  <HorizontalCard
    title="Typemaster Landing Page"
    img="/typemaster.jpg"
    desc="This is a cool pre-launch landing page"
    url="https://sparkly-sunflower-1a47c9.netlify.app/"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Photosnap Website"
    img="/photosnap.jpg"
    desc="Cool multipage website"
    url="https://github.com/Jack-WebDev/photosnap.git"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Sunnyside Landing Page"
    img="/sunnyside.jpg"
    desc="Cool landing page"
    url="#"
  />
</BaseLayout>
