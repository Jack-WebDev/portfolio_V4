---
const { title, subtitle } = Astro.props;
---

<div class="flex">
  <div class="education__time">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"></span>
  </div>
  <div class="experience__data bd-grid px-5 text-white">
    <h3 class="font-semibold mb-1 md:text-[1.5rem] lg:text-[2rem]">{title}</h3>
    <span class="font-light text-sm md:text-[1.3rem] lg:text-[1.5rem]">{subtitle}</span>
    <p class="my-2 text-justify md:text-[1.1rem] lg:text-[1.3rem]">
      <slot />
    </p>
  </div>
</div>
